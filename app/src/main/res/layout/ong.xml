<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainong"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ong">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/superior"
            layout="@layout/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/elegido3d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/superior"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/jcimag"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                app:shapeAppearanceOverlay="@style/CornerSize" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:foregroundGravity="fill_vertical"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragmentong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/elegido3d"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="90dp"
            android:orientation="vertical">

        </LinearLayout>

        <Button
            android:id="@+id/selectdos"
            android:theme="@style/Buttonspui"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/fragmentong"
            android:layout_alignStart="@id/fragmentong"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-70dp"
            android:enabled="false"
            android:text="@string/selectedong" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>