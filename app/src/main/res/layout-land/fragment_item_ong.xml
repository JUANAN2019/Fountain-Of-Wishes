<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="@dimen/espacioabajo"
    android:background="@drawable/seleccion"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="190dp"
        android:layout_height="189dp"
        android:layout_gravity="start"
        android:layout_weight="0"
        tools:srcCompat="@tools:sample/avatars" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:foregroundGravity="fill_vertical">

        <TextView
            android:id="@+id/tituloong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/espaciostart"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/espacionend"
            android:layout_marginBottom="20dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descripcionong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tituloong"
            android:layout_marginStart="@dimen/espaciostart"
            android:layout_marginEnd="@dimen/espacionend"
            android:layout_marginBottom="@dimen/espacioabajo"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/valoracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/descripcionong"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem" />
    </RelativeLayout>


</LinearLayout>